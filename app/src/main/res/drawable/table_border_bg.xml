<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna latar -->
    <solid android:color="#D6F3FF" />

    <!-- Garis tepi keseluruhan -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!-- Biar agak lembut di pojok -->
    <corners android:radius="4dp" />

    <!-- Sedikit padding biar teks tidak mepet -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
