<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸ”· HEADER GRADIENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bg_header_gradient"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_kembali_admin"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_revert" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laporan Pasien"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- ðŸ”¶ FILTER SECTION -->
        <!-- ðŸ”¶ FILTER SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="12dp"
            android:elevation="4dp"
            android:background="@drawable/bg_rounded_lightblue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter Laporan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#082A45"
                android:layout_marginBottom="12dp" />

            <!-- ðŸ”· FILTER : TANGGAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/et_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Tanggal Mulai"
                    android:focusable="false"
                    android:background="@drawable/bg_edittext"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/et_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Tanggal Akhir"
                    android:focusable="false"
                    android:background="@drawable/bg_edittext"
                    android:padding="10dp"
                    android:textSize="14sp"/>
            </LinearLayout>


            <!-- ðŸ”· POLI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Poli"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#082A45"/>

                <Spinner
                    android:id="@+id/sp_poli"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_spinner"/>
            </LinearLayout>


            <!-- ðŸ”· DOKTER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dokter"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#082A45"/>

                <Spinner
                    android:id="@+id/sp_dokter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_spinner"/>
            </LinearLayout>


            <!-- ðŸ”· STATUS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#082A45"/>

                <Spinner
                    android:id="@+id/sp_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_spinner"/>
            </LinearLayout>

            <!-- ðŸ”˜ tombol tampilkan -->
            <Button
                android:id="@+id/btn_filter_tampilkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tampilkan Laporan"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:backgroundTint="#B71C1C"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- ðŸ”· tabel scroll -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <TableLayout
                android:id="@+id/table_laporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="#FFFFFF"
                android:stretchColumns="*">

                <!-- HEADER kolom -->
                <TableRow android:background="#E3F2FD">

                    <TextView android:text="No" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="Nama Pasien" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="NIK" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="Poli" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="Dokter" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="Tanggal" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="Verif" android:textStyle="bold" android:padding="8dp"/>
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>

        <!-- ðŸ”½ detail laporan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="12dp"
            android:elevation="4dp"
            android:background="@drawable/bg_rounded_lightblue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Laporan"
                android:textColor="#0F6BBF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0F6BBF"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- nanti kamu isi detail setelah user filter -->

            </LinearLayout>

            <Button
                android:id="@+id/btn_unduh_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unduh PDF"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#0B5187"
                android:textColor="#FFFFFF"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
