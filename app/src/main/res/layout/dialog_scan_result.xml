<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_rounded"
    android:gravity="center_horizontal">

    <!-- Icon QR -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/qr_code"
        android:contentDescription="QR Success"
        android:layout_marginBottom="12dp"
        android:tint="#03C4F4" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Pasien Terbaca"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#082A45"
        android:layout_marginBottom="12dp" />

    <!-- Divider -->
    <View
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:background="#03C4F4"
        android:layout_marginBottom="16dp"/>

    <!-- Container Data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"

        android:elevation="2dp">

        <!-- Data Pasien -->
        <TextView
            android:id="@+id/txt_patient_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama: John Doe\nUsia: 24 Tahun\nNo. Rekam Medis: 20231018-002"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:layout_marginBottom="10dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/txt_patient_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Menunggu Verifikasi"
            android:textColor="#03C4F4"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="start" />
    </LinearLayout>

    <!-- Tombol Tutup -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutup"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#03C4F4"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="3dp"/>
</LinearLayout>
