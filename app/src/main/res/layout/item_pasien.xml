<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_hexagon_blue_overlay"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_nama_pasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pasien"
            android:textColor="#111111"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tv_poli_pasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poli : Jantung"
            android:textColor="#424242"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_verifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi"
                android:backgroundTint="#2196F3"
                android:textColor="#FFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_tolak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tolak"
                android:backgroundTint="#F44336"
                android:textColor="#FFF" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
