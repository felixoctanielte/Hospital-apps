<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Konten utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- ================= HEADER ================= -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <!-- Background biru -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#03C4F4" />

            <!-- Pola hexagon -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hexagon"
                android:scaleType="centerCrop"
                android:alpha="0.7" />

            <!-- Icon menu -->
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_gravity="start|top"
                android:clickable="true"
                android:focusable="true" />




            <!-- Bagian teks -->
            <!-- Dokter di bawah -->
            <ImageView
                android:id="@+id/doctorImage"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|bottom"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:src="@drawable/doctor" />

            <!-- Bagian teks -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Teks "CARING FOR LIFE" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginTop="90dp"
                    android:text="CARING FOR LIFE"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Teks utama (menimpa gambar dokter) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginTop="110dp"
                    android:elevation="6dp"
                    android:paddingEnd="32dp"
                    android:text="Leading the Way nin Medical\ Excellence"
                    android:textColor="#082A45"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Tombol -->

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/bg_button_white"
                    android:text="Our Services"
                    android:textColor="#03C4F4"
                    android:textSize="12sp"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:elevation="2dp" />

            </FrameLayout>


        </FrameLayout>

        <!-- ================= ISI SCROLL ================= -->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="-25dp"
            android:background="@drawable/search_bg"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:hint="Apa keluhan anda?"
            android:inputType="text"
            android:paddingStart="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Search bar -->

                <!-- Kategori -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:layout_marginTop="8dp">

                    <Button
                        style="@style/CategoryButton"
                        android:text="Psikiater"/>

                    <Button
                        style="@style/CategoryButton"
                        android:text="Jantung"/>

                    <Button
                        style="@style/CategoryButton"
                        android:text="Gigi"/>

                    <Button
                        style="@style/CategoryButton"
                        android:text="Kehamilan"/>

                    <Button
                        style="@style/CategoryButton"
                        android:text="Paru - Paru"/>

                    <Button
                        style="@style/CategoryButton"
                        android:text="+"/>
                </GridLayout>

                <!-- Reminder Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B3E5FC"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminder Box"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anda punya janji dengan “Dr. Brando”"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13 Oktober 2025\n09:00 WIB"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/doctor"
                        android:scaleType="fitCenter"/>
                </LinearLayout>

                <!-- Antrian Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B3E5FC"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:elevation="2dp"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS Land Of Dawn"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#004D40"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pasien : Antonio Momoco Sanchez"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dokter : dr. Brando, Sp. JP\nPoli : Jantung\nJam : 09:00"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Antrian : B-13\nEstimasi : 20 Menit"
                        android:textColor="#D32F2F"
                        android:layout_marginTop="8dp"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/qr_code"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/nav_drawer_bg"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
