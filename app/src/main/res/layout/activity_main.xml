<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ================= ROOT FRAME ================= -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ================= SCROLLABLE CONTENT ================= -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">

                <!-- ================= HEADER ================= -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#03C4F4" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hexagon"
                        android:scaleType="centerCrop"
                        android:alpha="0.7" />

                    <ImageView
                        android:id="@+id/menuIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:layout_gravity="start|top"
                        android:clickable="true"
                        android:focusable="true" />

                    <ImageView
                        android:id="@+id/doctorImage"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|bottom"
                        android:adjustViewBounds="true"
                        android:scaleType="fitEnd"
                        android:src="@drawable/doctor" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|top"
                            android:layout_marginTop="90dp"
                            android:text="CARING FOR LIFE"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|top"
                            android:layout_marginTop="110dp"
                            android:elevation="6dp"
                            android:paddingEnd="32dp"
                            android:text="Leading the Way in Medical Excellence"
                            android:textColor="#082A45"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|top"
                            android:layout_marginTop="170dp"
                            android:background="@drawable/bg_button_primary"
                            android:text="Our Services"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="6dp"
                            android:elevation="2dp" />
                    </FrameLayout>
                </FrameLayout>

                <!-- ================= SEARCH BAR ================= -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/search_bg"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:hint="Apa keluhan anda?"
                    android:textColor="#000000"
                    android:inputType="text"
                    android:paddingStart="16dp" />

                <!-- ================= KATEGORI ================= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:layout_marginTop="8dp"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true">

                        <!-- PSIKIATER -->
                        <LinearLayout
                            android:id="@+id/btn_psikiater"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/category_bg">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_psikiater"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Psikiater"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- JANTUNG -->
                        <LinearLayout
                            android:id="@+id/btn_jantung"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/category_bg">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_heart"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jantung"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- GIGI -->
                        <LinearLayout
                            android:id="@+id/btn_gigi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/category_bg">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_tooth"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gigi"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- KEHAMILAN -->
                        <LinearLayout
                            android:id="@+id/btn_kehamilan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/category_bg">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_pregnant"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kehamilan"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- PARU -->
                        <LinearLayout
                            android:id="@+id/btn_paru"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/category_bg">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_lungs"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paru - Paru"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- LAINNYA -->
                        <LinearLayout
                            android:id="@+id/btn_lainnya"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/category_bg">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_add"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lainnya"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </GridLayout>

                    <!-- ================= ANTRIAN BOX ================= -->

                    <!-- ================= MAP PREVIEW BOX ================= -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="#B3E5FC"
                        android:clipToOutline="true"
                        android:elevation="2dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RS Land Of Dawn"

                            android:textColor="#004D40"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Pasien : Antonio Momoco Sanchez"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Dokter : dr. Brando, Sp. JP\nPoli : Jantung\nJam : 09:00"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Antrian : B-13\nEstimasi : 20 Menit"
                            android:textColor="#D32F2F" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/qr_code" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mapBox"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="32dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card"
                        android:elevation="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Rumah Sakit"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#004D40"
                            android:layout_marginBottom="8dp" />

                        <WebView
                            android:id="@+id/geoMapPreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#EEE"
                            android:elevation="3dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- ================= CAMERA BUTTON ================= -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageButton
                android:id="@+id/btn_camera"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:background="@drawable/bg_glow_button"
                android:src="@drawable/barcode_cam"
                android:scaleType="centerInside"
                android:contentDescription="Scan QR"
                android:elevation="20dp" />
        </FrameLayout>
    </FrameLayout>

    <!-- ================= DRAWER ================= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/nav_drawer_bg"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
