<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <!-- ================= MAIN CONTENT ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ================= HEADER ================= -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <!-- Background biru -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#03C4F4" />

                <!-- Pola hexagon -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hexagon"
                    android:scaleType="centerCrop"
                    android:alpha="0.7" />

                <!-- Icon menu -->
                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_menu"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="start|top"
                    android:tint="@android:color/white"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Gambar dokter -->
                <ImageView
                    android:id="@+id/doctorImage"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|bottom"
                    android:adjustViewBounds="true"
                    android:scaleType="fitEnd"
                    android:src="@drawable/doctor" />

                <!-- Layer teks dan tombol -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <!-- Teks kecil -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginTop="80dp"
                        android:elevation="6dp"
                        android:text="CARING FOR LIFE"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Teks utama -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginTop="105dp"
                        android:elevation="6dp"
                        android:paddingEnd="50dp"
                        android:text="Leading the Way\nin Medical Excellence"
                        android:textColor="#082A45"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Tombol -->
                    <Button
                        android:id="@+id/btnServices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginTop="175dp"
                        android:background="@drawable/bg_button_primary"
                        android:elevation="8dp"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="6dp"
                        android:text="Our Services"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </FrameLayout>

            </FrameLayout>

            <!-- ================= STATISTIK INFO ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/stat_card"
                android:elevation="6dp"
                android:orientation="vertical"
                android:padding="12dp">
                <FrameLayout
                    android:id="@+id/fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Statistik Info"
                    android:textColor="#007BA7"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                    <!-- HEADER -->
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1,2,3"
                        android:background="@drawable/table_border_bg">

                        <!-- Header Row -->
                        <TableRow
                            android:background="#8BBEDE"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView
                                android:text=""
                                android:layout_width="40dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Judul"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:text="Nilai"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:text="Keterangan"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </TableRow>

                        <!-- Garis pembatas -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000" />

                        <!-- Isi Tabel -->
                        <TableRow>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_patient"
                                android:tint="#007BA7"
                                android:layout_marginEnd="8dp" />
                            <TextView android:text="Total Pasien Hari Ini" />
                            <TextView
                                android:text="128"
                                android:textStyle="bold"
                                android:gravity="center" />
                            <TextView android:text="Semua Poli" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000" />

                        <TableRow>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_doctor"
                                android:tint="#007BA7"
                                android:layout_marginEnd="8dp" />
                            <TextView android:text="Total Dokter Aktif" />
                            <TextView
                                android:text="15"
                                android:textStyle="bold"
                                android:gravity="center" />
                            <TextView android:text="Sedang Praktik" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000" />

                        <TableRow>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_queue"
                                android:tint="#007BA7"
                                android:layout_marginEnd="8dp" />
                            <TextView android:text="Antrean Aktif" />
                            <TextView
                                android:text="37"
                                android:textStyle="bold"
                                android:gravity="center" />
                            <TextView android:text="Sedang Menunggu" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000" />

                        <TableRow>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_verify"
                                android:tint="#007BA7"
                                android:layout_marginEnd="8dp" />
                            <TextView android:text="Perlu Verifikasi" />
                            <TextView
                                android:text="5"
                                android:textStyle="bold"
                                android:gravity="center" />
                            <TextView android:text="Belum Diverifikasi" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000" />

                        <TableRow>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_schedule"
                                android:tint="#007BA7"
                                android:layout_marginEnd="8dp" />
                            <TextView android:text="Jadwal Hari Ini" />
                            <TextView
                                android:text="10"
                                android:textStyle="bold"
                                android:gravity="center" />
                            <TextView android:text="Aktif Melayani" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000" />

                        <TableRow>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_report"
                                android:tint="#007BA7"
                                android:layout_marginEnd="8dp" />
                            <TextView android:text="Laporan Baru" />
                            <TextView
                                android:text="128"
                                android:textStyle="bold"
                                android:gravity="center" />
                            <TextView android:text="Belum Dicetak" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000" />
                    </TableLayout>


            </LinearLayout>

            <!-- ================= AKTIVITAS TERBARU ================= -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktivitas Terbaru"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="#DDF6FF"
                android:padding="12dp"
                android:stretchColumns="0,1,2">

                <TableRow>
                    <TextView android:text="Waktu" android:textStyle="bold"/>
                    <TextView android:text="Aktivitas" android:textStyle="bold"/>
                    <TextView android:text="Keterangan" android:textStyle="bold"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="09.05"/>
                    <TextView android:text="Verifikasi pasien diterima"/>
                    <TextView android:text="Pasien: Mamat Reza"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="09.10"/>
                    <TextView android:text="Tambah data dokter baru"/>
                    <TextView android:text="dr. Brando, Sp.JP"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="09.30"/>
                    <TextView android:text="Cetak laporan harian"/>
                    <TextView android:text="Poli Gigi"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="10.00"/>
                    <TextView android:text="Antrian baru terdaftar"/>
                    <TextView android:text="Pasien: Faiz Lembayung"/>
                </TableRow>
            </TableLayout>

            <!-- ================= QUICK ACTION ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#001F3F"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Action"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Left Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Verifikasi -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:layout_margin="8dp"
                            android:background="@drawable/quick_button_bg"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="8dp"
                                android:padding="8dp"
                                android:background="@drawable/icon_bg_purple"
                                android:src="@drawable/ic_verify"
                                android:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Verifikasi"
                                android:textColor="#001F3F"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!-- Laporan -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:layout_margin="8dp"
                            android:background="@drawable/quick_button_bg"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="8dp"
                                android:padding="8dp"
                                android:background="@drawable/icon_bg_red"
                                android:src="@drawable/ic_report"
                                android:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Laporan"
                                android:textColor="#001F3F"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Right Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Dokter -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:layout_margin="8dp"
                            android:background="@drawable/quick_button_bg"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="8dp"
                                android:padding="8dp"
                                android:background="@drawable/icon_bg_green"
                                android:src="@drawable/ic_doctor"
                                android:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dokter"
                                android:textColor="#001F3F"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!-- Pengguna -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:layout_margin="8dp"
                            android:background="@drawable/quick_button_bg"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="8dp"
                                android:padding="8dp"
                                android:background="@drawable/icon_bg_golden"
                                android:src="@drawable/ic_user"
                                android:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pengguna"
                                android:textColor="#001F3F"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- ================= NAVIGATION DRAWER ================= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/nav_drawer_bg"
        app:menu="@menu/admin_menu"
        app:headerLayout="@layout/nav_header_admin" />

</androidx.drawerlayout.widget.DrawerLayout>
